<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<%= link_to 'Back to Vendors', :vendors %>

<table>
  <thead>
    <tr>
      <th>Like</th>
      <th>Content</th>
      <th>Vendor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.like %></td>
        <td><%= comment.content %></td>
        <td><%= comment.vendor_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_comment_path %>
